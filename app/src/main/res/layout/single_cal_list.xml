<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="10dp"
    app:cardElevation="10dp"
    app:cardCornerRadius="6dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="25dp"
        android:orientation="vertical">


        <TextView
            android:id="@+id/singleCallListBorderTypeEt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Border type: Hostel"/>

        <TextView
            android:id="@+id/singleCallListGroupTypeEt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Group type: Science"/>
        <TextView
            android:id="@+id/singleCallListGpaEt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="GPA: 4.00"/>
        <TextView
            android:id="@+id/singleTotalCostEt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Total cost: 5000"/>




    </LinearLayout>




</androidx.cardview.widget.CardView>