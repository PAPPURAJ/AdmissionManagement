<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="20dp"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical">

    <androidx.constraintlayout.utils.widget.ImageFilterView
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginTop="30dp"
        android:src="@drawable/mcq_icon"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:gravity="right"
            android:textStyle="bold"
            android:layout_height="wrap_content"
            android:text="Border type "/>
        <Spinner
            android:id="@+id/addCalBorderTypeSp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:entries="@array/borderType"/>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:gravity="right"
            android:textStyle="bold"
            android:layout_height="wrap_content"
            android:text="Group type "/>
        <Spinner
            android:id="@+id/addCalGroupTypeSp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:entries="@array/groupType"/>

    </LinearLayout>
    <EditText
        android:id="@+id/addCalGpaEt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="80dp"
        android:layout_marginLeft="80dp"
        android:gravity="center"
        android:inputType="numberDecimal"
        android:hint="GPA"/>




</LinearLayout>